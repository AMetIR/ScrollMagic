{
	"compilerOptions": {
		"baseUrl": "./src",
		"outDir": "./dist",
		"target": "ES6",
		"strict": true,
		"sourceMap": true,
		"removeComments": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true
	},
	"include": ["src/**/*"]
}
